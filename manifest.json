{
  "manifest_version": 2,
  "name": "SVTVify",
  "version": "2.0",
  "description": "Расширение, которое добавит к вашим превью видео на YouTube Светова, а иногда даже и Кашина",
  "author": "@unsafe_andrew",
  "icons": {
    "48": "icons/48.png"
  },
  "permissions": ["*://www.youtube.com/*"],
  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["svtvify.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "images/*.png"
  ]
}
